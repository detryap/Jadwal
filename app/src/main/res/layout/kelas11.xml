    <Button
        android:id="@+id/buttonxit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonxit1"
        android:layout_alignStart="@+id/buttonxit1"
        android:layout_below="@+id/buttonxit1"
        android:layout_marginTop="21dp"
        android:text="XIT3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonxir2"
        android:layout_centerHorizontal="true"
        android:text="TextView" />
</RelativeLayout>
