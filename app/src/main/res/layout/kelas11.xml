        android:layout_alignStart="@+id/buttonxir6"
        android:layout_alignTop="@+id/buttonxit1"
        android:text="XIT2" />

    <Button
        android:id="@+id/buttonxit5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonxit3"
        android:layout_alignStart="@+id/buttonxit3"
        android:layout_below="@+id/buttonxit3"
        android:layout_marginTop="23dp"
        android:text="XIT5" />

    <Button
        android:id="@+id/buttonxir4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonxir3"
        android:layout_alignBottom="@+id/buttonxir3"
        android:layout_alignLeft="@+id/buttonxir2"
        android:layout_alignStart="@+id/buttonxir2"
        android:text="XIR4" />

    <Button
        android:id="@+id/buttonxir2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonxir1"
        android:layout_alignBottom="@+id/buttonxir1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="XIR2" />

    <Button
        android:id="@+id/buttonxit4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonxit3"
        android:layout_alignBottom="@+id/buttonxit3"
        android:layout_alignLeft="@+id/buttonxit2"
        android:layout_alignStart="@+id/buttonxit2"
        android:text="XIT4" />

    <Button
        android:id="@+id/buttonxir1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
