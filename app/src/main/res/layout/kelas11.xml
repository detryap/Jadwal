<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonxir3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonxir1"
        android:layout_alignStart="@+id/buttonxir1"
        android:layout_below="@+id/buttonxir1"
        android:layout_marginTop="17dp"
        android:text="XIR3" />

    <Button
        android:id="@+id/buttonxir5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonxir3"
        android:layout_alignStart="@+id/buttonxir3"
        android:layout_below="@+id/buttonxir3"
        android:layout_marginTop="20dp"
        android:text="XIR5" />

    <Button
        android:id="@+id/buttonxir6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonxir4"
        android:layout_alignStart="@+id/buttonxir4"
        android:layout_alignTop="@+id/buttonxir5"
        android:text="XIR6" />

    <Button
        android:id="@+id/buttonxit1"
        android:layout_width="wrap_content"
